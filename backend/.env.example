# CSV 파일이 위치하는 기본 경로
CSV_DATA_DIR=./data

# DuckDB 데이터베이스 파일 경로(메모리 사용 시 :memory:)
DUCKDB_DATABASE_PATH=./data/cache/catalog.duckdb

# 대용량 CSV 자동 Parquet 변환 여부 (1=활성, 0=비활성)
AUTO_CONVERT_TO_PARQUET=1

# Parquet 변환 시 Row Group 크기
PARQUET_ROW_GROUP_SIZE=100000

# FastAPI 서버 설정
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# 로깅 레벨
LOG_LEVEL=INFO

